            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btn_siguiente" mnemonicParsing="false" onAction="#ir_terciario" text="Siguiente" />
