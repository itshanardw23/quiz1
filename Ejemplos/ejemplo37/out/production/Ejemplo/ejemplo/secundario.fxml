            <MenuBar BorderPane.alignment="CENTER">
               <menus>
                  <Menu mnemonicParsing="false" text="Archivo">
                     <items>
                        <MenuItem fx:id="menu_salir" mnemonicParsing="false" onAction="#salir" text="Salir" />
